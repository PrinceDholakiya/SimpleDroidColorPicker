<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorPicker">
        <attr name="handleStrokeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RingColorPicker">
        <attr name="ringWidth" format="dimension"/>
        <attr name="gapWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="LinearColorPicker">
        <attr name="pickerType" format="enum">
            <enum name="hue" value="0"/>
            <enum name="saturation" value="1"/>
            <enum name="value" value="2"/>
        </attr>
    </declare-styleable>
</resources>