<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/defaultPadding"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.github.mata1.simpledroidcolorpicker.pickers.CircleColorPicker
        android:id="@+id/ccp"
        android:visibility="visible"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="10dp" />

    <com.github.mata1.simpledroidcolorpicker.pickers.LinearColorPicker
        android:id="@+id/lcp"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <com.github.mata1.simpledroidcolorpicker.pickers.RingColorPicker
        android:id="@+id/rcp"
        android:visibility="gone"
        android:padding="10dp"
        android:background="#00aaffdd"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="200dp" />

    <SeekBar
        android:id="@+id/sb_ring"
        android:visibility="gone"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/sb_gap"
        android:visibility="gone"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <SeekBar
        android:id="@+id/sb_stroke"
        android:visibility="gone"
        android:progress="5"
        android:max="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="randomColor"
        android:text="Set random color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--<Button
        android:onClick="save"
        android:text="Save image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

</LinearLayout>
